@model KameraViewModel


@{ 
    var collapseId = "collapse" + @Model.Id;
}
<tr hx-target="this" hx-swap="outerHTML">
    <td>
        <a class="btn btn-sm" data-bs-toggle="collapse" data-bs-target="#@collapseId"
           role="button" aria-expanded="false" aria-controls="@collapseId"
           title="Slike">
            <i class="fas fa-plus"></i>
        </a>
    </td>
    <td class="text-left">@Model.Id</td>
    <td class="text-left">@Model.Naziv</td>
    <td class="text-left">@Model.DionicaNaziv</td>
    <td class="text-left">@Model.KoordinateKonverter(@Model.GeografskaSirina.Value)</td>
    <td class="text-left">@Model.KoordinateKonverter(@Model.GeografskaDuzina.Value)</td>
    <td>
        <a class="btn btn-sm"
           hx-get="@Url.Action(nameof(KameraController.Edit), new { id = Model.Id })"
           title="Ažuriraj"><i class="fas fa-edit"></i></a>
    </td>
    <td>
        <button class="btn btn-sm btn-danger"
                hx-confirm="Obrisati mjesto?"
                hx-delete="@Url.Action(nameof(KameraController.Delete), new { id = Model.Id })"
                title="Obriši">
            <i class="fas fa-trash-alt"></i>
        </button>
    </td>
</tr>


