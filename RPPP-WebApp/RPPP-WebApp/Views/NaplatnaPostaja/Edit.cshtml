@model NaplatnaPostajaDetailView
@{
    ViewBag.Title = "Naplatna postaja br." + @Model.NaplatnaID;
}



<div class="row">
   <div class="col-sm-1">
        @if (ViewBag.Previous != null)
        {
            <a class="btn btn-sm btn-primary"
           asp-action="Edit"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           asp-route-filter="@ViewBag.Filter"
           asp-route-position="@(ViewBag.Position - 1)"
           asp-route-id="@ViewBag.Previous">
                <i class="fas fa-step-backward"></i>
            </a>
        }
    </div>
    <div class="col-sm-2">
        @if (ViewBag.Next != null)
        {
            <a class="btn btn-sm btn-primary" asp-action="Edit"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           asp-route-filter="@ViewBag.Filter"
           asp-route-position="@(ViewBag.Position + 1)"
           asp-route-id="@ViewBag.Next">
                <i class="fas fa-step-forward"></i>
            </a>
        }
    </div>
</div>

<div class="container">
    


    <form id="dokument_form" method="post" asp-action="Edit"
        asp-route-page="@ViewBag.Page"
        asp-route-sort="@ViewBag.Sort"
        asp-route-ascending="@ViewBag.Ascending"
        asp-route-filter="@ViewBag.Filter"
        asp-route-position="@ViewBag.Position">
        <input type="hidden" asp-for="NaplatnaID" />
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Ime"></label>
            <div><span asp-validation-for="Ime" class="text-danger" /></div>
            <input asp-for="Ime" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="GeoDuzina"></label>
            <div><span asp-validation-for="GeoDuzina" class="text-danger" /></div>
            <input asp-for="GeoDuzina" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="GeoSirina"></label>
            <div><span asp-validation-for="GeoSirina" class="text-danger" /></div>
            <input asp-for="GeoSirina" class="form-control" />
        </div>

        <div class="col-sm-2">
        <button id="save" type="submit" class="btn btn-sm btn-primary save" title="Spremi"><i class="fas fa-save"></i></button>
        <a class="btn btn-sm btn-primary cancel"
           asp-action="Edit"
           asp-route-id="@Model.NaplatnaID"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           asp-route-filter="@ViewBag.Filter"
           asp-route-position="@ViewBag.Position"
           title="Osvježi">
          <i class="fas fa-sync-alt"></i>
        </a>
        <a class="btn btn-sm btn-primary cancel"
           asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           asp-route-filter="@ViewBag.Filter"
           title="Odustani">
          <i class="fas fa-undo-alt"></i>
        </a>
      </div>



        <div class="col-sm-10">
            <partial name="StavkeCjenika" model="Model.StavkeCjenika" />
        </div>
    </form>
</div>

<partial name="NovaStavkaTemplate"/>

@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts {
    <partial name="IncludeValidation" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/autocomplete.js" asp-append-version="true"></script>
    <script src="~/js/naplatne.js" asp-append-version="true"></script>
}