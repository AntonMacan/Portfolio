@model RPPP_WebApp.Models.Multimedija

@{
    ViewData["Title"] = "Dodaj";
}

<h1>Dodaj novu poveznicu za multimedijski sadržaj</h1>

<h4>Multimedija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <input hidden asp-for="OdmoristeId" value="@Model.OdmoristeId"></input>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Odmorista" asp-action="Details" asp-route-id="@Model.OdmoristeId">Natrag na odmorište</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
