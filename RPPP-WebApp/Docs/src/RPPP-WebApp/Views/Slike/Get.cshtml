@model SlikaViewModel

<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-left">@Model.KameraNaziv</td>
    <td class="text-left">@Model.Datum</td>
    <td class="text-left">@Model.Smjer</td>
    <td class="text-left">@Model.Url</td>
    <td>
        <a class="btn btn-sm"
           hx-get="@Url.Action(nameof(SlikeController.Edit), new { date = Model.Datum, id = Model.KameraId })"
           title="Ažuriraj"><i class="fas fa-edit"></i></a>
    </td>
    <td>
        <button class="btn btn-sm btn-danger"
                hx-confirm="Obrisati mjesto?"
                hx-delete="@Url.Action(nameof(SlikeController.Delete), new { date = Model.Datum, id = Model.KameraId })"
                title="Obriši">
            <i class="fas fa-trash-alt"></i>
        </button>
    </td>
</tr>