@model ObjektViewModel

@{
    ViewBag.Title = "Novi objekt";
}



<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
                   <label asp-for="DionicaNaziv" class="col-sm-2 col-form-label">Dionica</label>
               <input asp-for="DionicaNaziv" class="form-control" data-autocomplete="dionica"
                                data-autocomplete-placeholder-name="DionicaNaziv"
                                value="@Model.DionicaNaziv" />
               <input type="hidden" asp-for="DionicaID" data-autocomplete-placeholder="DionicaNaziv" />
           </div>
    <div class="form-group">
        <label asp-for="Opis"></label>
        <div><span class="text-danger"></span></div>
        <input asp-for="Opis" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TipObjekta"></label>
        <div><span asp-validation-for="TipObjekta" class="text-danger"></span></div>
        <input asp-for="TipObjekta" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NadmorskaVisina"></label>
        <div><span asp-validation-for="NadmorskaVisina" class="text-danger"></span></div>
        <input asp-for="NadmorskaVisina" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Stacionaza"></label>
        <div><span class="text-danger"></span></div>
        <input asp-for="Stacionaza" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DimenzijeM"></label>
        <div><span class="text-danger"></span></div>
        <input asp-for="DimenzijeM" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GeografskaSirina">Geografska širina</label>
        <div><span asp-validation-for="GeografskaSirina" class="text-danger"></span></div>
        <input asp-for="GeografskaSirina" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GeografskaDuzina">Geografska dužina</label>
        <div><span asp-validation-for="GeografskaDuzina" class="text-danger"></span></div>
        <input asp-for="GeografskaDuzina" class="form-control" />
    </div>
    
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-default">Odustani</a>
    </div>
</form>

@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
    <partial name="IncludeValidation" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/autocomplete.js" asp-append-version="true"></script>
}