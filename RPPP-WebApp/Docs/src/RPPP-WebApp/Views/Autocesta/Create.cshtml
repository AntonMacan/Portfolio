@model Autoceste

@{
    ViewBag.Title = "Nova autocesta";
}

<h2>Unos nove autoceste</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Oznaka"></label>
        <div><span asp-validation-for="Oznaka" class="text-danger" /></div>
        <input asp-for="Oznaka" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Koncesionar"></label>
        <div><span asp-validation-for="Koncesionar" class="text-danger"></span></div>
        <select class="form-control" asp-for="Koncesionar" asp-items="ViewBag.Koncesionari">
            <option disabled selected value="">Odaberite koncesionara</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Pocetak"></label>
        <div><span asp-validation-for="Pocetak" class="text-danger" /></div>
        <input asp-for="Pocetak" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Kraj"></label>
        <div><span asp-validation-for="Kraj" class="text-danger" /></div>
        <input asp-for="Kraj" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}