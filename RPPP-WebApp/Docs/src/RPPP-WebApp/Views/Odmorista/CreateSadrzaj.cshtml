@model Sadrzaj

<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-start">
        <input asp-for="Naziv" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="TipSadrzajaNaziv" class="form-control" data-autocomplete="tipsadrzaja"
               data-autocomplete-placeholder-name="TipSadrzajaNaziv" />
        <input type="hidden" asp-for="TipSadrzajaId" data-autocomplete-placeholder="TipSadrzajaNaziv" />
    </td>
    <td class="text-start">
        <input asp-for="GeografskaDuzina" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="GeografskaSirina" class="form-control" />
    </td>
    <td class="text-start">
        <span></span>
    </td>

    <td>
        <input type="hidden" asp-for="OdmoristeId" />
        <button hx-include="closest tr"
                hx-post="@Url.Action(nameof(OdmoristaController.CreateSadrzaj))"
                class="btn btn-sm btn-primary" title="Spremi">
            <i class="fas fa-save"></i>
        </button>
    </td>
    <td>
    </td>
    <td>
        <div asp-validation-summary="All"></div>
    </td>
</tr>

<script src="~/lib/jqueryui/jquery-ui.js"></script>
<script src="~/js/autocomplete.js" asp-append-version="true"></script>