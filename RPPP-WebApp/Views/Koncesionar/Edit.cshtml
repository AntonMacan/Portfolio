@model Koncesionari

@{
    ViewBag.Title = "Ažuriranje koncesionara";
}

<form asp-route-naziv="@Model.NazivKoncesionara"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <div asp-validation-summary="All"></div>

    <h2>Ažuriranje koncesionara @Model.NazivKoncesionara</h2>

    <div class="form-group">
        <label asp-for="Url"></label>
        <div><span asp-validation-for="Url" class="text-danger" /></div>
        <input asp-for="Url" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>

</form>

@section scripts {
    <partial name="IncludeValidation" />
}