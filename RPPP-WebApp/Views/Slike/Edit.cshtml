@model Slike
@{
    ViewBag.Title = "AÅ¾uriranje slike";
}
<tr hx-target="this" hx-swap="outerHTML">
     <td class="text-start">
            <select class="form-select" asp-for="KameraId" asp-items="ViewBag.Kamere">
            </select>
        </td>
    <td class="text-start">
        <input asp-for="Datum" class="form-control"/>
    </td>
    <td class="text-start">
        <input asp-for="Smjer" class="form-control"/>
    </td>
    <td class="text-start">
        <input asp-for="Url" class="form-control"/>
    </td>
    <td>
        <input type="hidden" asp-for="KameraId"/>
        <button hx-include="closest tr"
                hx-post="@Url.Action(nameof(SlikeController.Edit), new {id = Model.KameraId, prevId = ViewBag.prevId, prevDate = ViewBag.prevDate})"
                class="btn btn-sm btn-primary" title="Spremi"><i class="fas fa-save"></i></button>
    </td>
    <td>
        <button class="btn btn-sm cancel"
                hx-get="@Url.Action(nameof(SlikeController.Get), new { id = Model.KameraId, datum = Model.Datum })"
                title="Odustani"><i class="fas fa-undo-alt"></i></button>
    </td>
    <td>
        <div asp-validation-summary="All"></div>
    </td>
</tr>